{% extends 'base.html.twig' %}

{% block title %} {{ test.name }} {% endblock %}

{% block body %}
    {% if test %}
        <h1>{{ test.name }}</h1>
        {{ form_start(form) }}
            {{ form_widget(form) }}

            <button type="submit" class="btn btn-primary">
                {{ 'Save'|trans }}
            </button>
        {{ form_end(form) }}
    {% else %}
        <p>Test does not exist!</p>
    {% endif %}
{% endblock %}
{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}
